@model VeterinaryPassport.Models.Pet

@{
    ViewBag.Title = "Добавление питомца";
}

<div class="create-and-edit-form">
    <form class="add-user-form" method="post" enctype="multipart/form-data" asp-controller="Passport" asp-action="PassportCreate" asp-antiforgery="true" >
         <div class="form-group">
            <label asp-for="ImageName" class="control-label"></label>
            <div class="form-group-container">
                <input type="file" asp-for="ImageName" multiple accept="image/*,image/jpeg" class='input' onchange='function1(this.files)' />
                <span asp-validation-for="ImageName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Name" class="control-label"></label>
            <div class="form-group-container">
                <input type="text" asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Kind" class="control-label"></label>
            <div class="form-group-container">
                <input type="text" asp-for="Kind" class="form-control" />
                <span asp-validation-for="Kind" class="text-danger"></span>
            </div>
        </div>
       <div class="form-group">
            <label asp-for="Sex" class="control-label"></label>
            <div class="form-group-container">
                <select asp-for="Sex" class="custom-select passport-create-select">
                    <option>Мужской</option>
                    <option>Женский</option>
                </select>
                <span asp-validation-for="Sex" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Breed" class="control-label"></label>
            <div class="form-group-container">
                <input type="text" asp-for="Breed" class="form-control" />
                <span asp-validation-for="Breed" class="text-danger"></span>
            </div>
        </div>
         <div class="form-group">
            <label asp-for="DOB" class="control-label"></label>
            <div class="form-group-container">
                <input type="date" asp-for="DOB" value="1999-01-01" class="form-control" />
                <span asp-validation-for="DOB" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <input type="submit" value="Далее" class="btn btn-outline-secondary" />
        </div>
    </form>
</div>
